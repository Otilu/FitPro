    <script>
        // Mobile menu toggle
        document.querySelector('.mobile-menu-btn').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
        });
        
        // Dark mode toggle
        document.getElementById('dark-mode-toggle').addEventListener('click', function() {
            document.body.classList.toggle('dark-mode');
            const icon = this.querySelector('i');
            if (document.body.classList.contains('dark-mode')) {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
        });
        
        // Initialize charts
        document.addEventListener('DOMContentLoaded', function() {
            // Progress Chart
            const ctx = document.getElementById('progressChart').getContext('2d');
            const progressChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['1 Oct', '5 Oct', '10 Oct', '15 Oct', '20 Oct', '25 Oct', '30 Oct'],
                    datasets: [
                        {
                            label: 'Weight (kg)',
                            data: [71, 70.5, 70.2, 69.8, 69.5, 69.1, 68.8],
                            borderColor: '#3b82f6',
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            borderWidth: 3,
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Body Fat %',
                            data: [28, 27.5, 27, 26.8, 26.5, 26.2, 25.8],
                            borderColor: '#8b5cf6',
                            backgroundColor: 'rgba(139, 92, 246, 0.1)',
                            borderWidth: 3,
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Muscle Mass (kg)',
                            data: [35, 35.5, 36, 36.2, 36.5, 36.7, 37],
                            borderColor: '#10b981',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            borderWidth: 3,
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        },
                        tooltip: {
                            backgroundColor: 'rgba(30, 41, 59, 0.9)',
                            padding: 12,
                            cornerRadius: 8
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
            
            // Schedule day selection
            document.querySelectorAll('.schedule-day').forEach(day => {
                day.addEventListener('click', function() {
                    document.querySelectorAll('.schedule-day').forEach(d => d.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // Water glass selection
            document.querySelectorAll('.water-glass').forEach((glass, index) => {
                glass.addEventListener('click', function() {
                    if (index < 4) return;
                    
                    if (this.classList.contains('active')) {
                        this.classList.remove('active');
                    } else {
                        this.classList.add('active');
                    }
                    
                    const activeGlasses = document.querySelectorAll('.water-glass.active').length;
                    document.querySelector('.water-stat-value').textContent = activeGlasses;
                });
            });
            
            // Add water glass
            document.querySelector('.water-btn').addEventListener('click', function() {
                const glasses = document.querySelectorAll('.water-glass');
                for (let i = 0; i < glasses.length; i++) {
                    if (!glasses[i].classList.contains('active')) {
                        glasses[i].classList.add('active');
                        break;
                    }
                }
                
                const activeGlasses = document.querySelectorAll('.water-glass.active').length;
                document.querySelector('.water-stat-value').textContent = activeGlasses;
            });
            
            // Animation for elements
            const animateOnScroll = () => {
                const elements = document.querySelectorAll('.animate');
                elements.forEach(el => {
                    const elementTop = el.getBoundingClientRect().top;
                    const elementVisible = 150;
                    
                    if (elementTop < window.innerHeight - elementVisible) {
                        el.style.opacity = "1";
                        el.style.transform = "translateY(0)";
                    }
                });
            };
            
            window.addEventListener('load', animateOnScroll);
            window.addEventListener('scroll', animateOnScroll);
        });
    </script>
